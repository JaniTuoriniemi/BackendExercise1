            <td colspan="2"><input type="submit" value="Submit Form" /></td>
        </tr>
    </table>
</form>

@using (Html.BeginForm("People_main", "People", FormMethod.Post))

{ 
    <table>
        <tr>
            <td>Enter Name: </td>
