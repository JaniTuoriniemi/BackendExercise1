@using Microsoft.AspNetCore.Identity
@using BackendExercise.ApplicationUserSpace
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
	Layout = "~/Views/shared/Layout.cshtml";
}
@model BackendExercise.Models.Viewlist
<h1>AddUserToRole</h1>

<form asp-action="AddUserToRole" method="post">
    <div class="form-group">
        <label class="control-label">Role:</label>
        <select name="role" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>
    <div class="form-group">
        <label class="control-label">User:</label>
        <select name="user" class="form-control" asp-items="ViewBag.Users"></select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<h1>Create</h1>

<form asp-action="Create" method="post">
    <label>Name:</label>
    <input type="text" name="name" />
    <input type="submit" value="Create" />
</form>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>